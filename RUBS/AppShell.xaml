<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RUBS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RUBS"
    Title="RUBS"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#39559E"
    Shell.TabBarForegroundColor="#E1395F">

    <TabBar>
        <Tab Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Views.MainPage}" />
        </Tab>
        <Tab Icon="maps.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Views.PaginaMapa}" />
        </Tab>
        <Tab Icon="detalhes.svg">
            <ShellContent ContentTemplate="{DataTemplate local:Views.ListagemEestabelecimentos}" />
        </Tab>
    </TabBar>

</Shell>