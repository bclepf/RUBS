<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RUBS.Views.ListagemEstabelecimentos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout Padding="10">
        <!-- Título da página -->
        <Label FontSize="20" Text="Lista de Estabelecimentos" HorizontalOptions="Center" />

        <!-- Lista de estabelecimentos -->
        <ListView x:Name="ListaEstabelecimentos" 
                  HasUnevenRows="True" 
                  SeparatorVisibility="Default"
                  ItemTapped="ListaEstabelecimentos_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label FontSize="20" Text="{Binding nome_fantasia}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
